<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background track for the progress bar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#CCCCCC" /> <!-- Change this color to your desired background color -->
        </shape>
    </item>
    <!-- Define the progress bar indicator -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#FF0000" /> <!-- Change this color to your desired progress color -->
            </shape>
        </clip>
    </item>
</layer-list>
