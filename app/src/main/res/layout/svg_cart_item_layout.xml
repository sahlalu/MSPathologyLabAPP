<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/svgItemImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/svgTitleTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/svgItemImageView"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/svgPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/svgTitleTextView"
        android:layout_alignStart="@id/svgTitleTextView"
        android:layout_marginTop="4dp" />


    <Button
        android:id="@+id/svgRemoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_below="@id/svgPriceTextView"
        android:layout_marginTop="4dp"
        android:layout_alignStart="@id/svgPriceTextView" />

</RelativeLayout>