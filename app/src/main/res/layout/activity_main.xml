<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/laboratory" />


    <TextView
        android:id="@+id/LabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cantora_one"
        android:text="MS Pathology\n          Lab"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/certifiedByTextView"
        android:layout_width="wrap_content"
        android:fontFamily="@font/muli_black"
        android:layout_height="wrap_content"
        android:layout_below="@id/LabName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="5dp"
        android:text="Certified By"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/imagesLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/certifiedByTextView"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Add your three ImageViews here -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/verify"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/verify1"
            android:layout_marginRight="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/verify2" />

    </LinearLayout>



</RelativeLayout>